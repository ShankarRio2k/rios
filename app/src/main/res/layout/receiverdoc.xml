<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:id="@+id/receiver_layout"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="64dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/receive_document_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/photo" />

    <TextView
        android:id="@+id/receiver_document_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/receive_document_icon"
        android:layout_toStartOf="@id/receiver_document_time"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/receiver_document_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_centerVertical="true" />

</RelativeLayout>

